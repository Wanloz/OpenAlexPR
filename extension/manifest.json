{
    "manifest_version": 3,
    "name": "OpenAlex Recommender",
    "version": "1.0",
    "description": "Рекомендательная система для научных статей",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://api.openalex.org/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}